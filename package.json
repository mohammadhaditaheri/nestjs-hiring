{
    "name": "nestjs-hiring-test",
    "version": "1.0.0",
    "description": "NestJS backend hiring test with OTP authentication and World Cup predictions processing",
    "main": "dist/main.js",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "test:unit": "jest --testPathPatterns=src/",
        "test:integration": "jest --testPathPatterns=processor.spec.ts",
        "test:all": "./run-tests.sh all",
        "migration:generate": "npm run typeorm -- -d src/config/data-source.ts migration:generate",
        "migration:run": "npm run typeorm -- -d src/config/data-source.ts migration:run",
        "migration:revert": "npm run typeorm -- -d src/config/data-source.ts migration:revert",
        "typeorm": "typeorm-ts-node-commonjs"
    },
    "dependencies": {
        "@nestjs/axios": "4.0.1",
        "@nestjs/common": "11.1.8",
        "@nestjs/config": "4.0.2",
        "@nestjs/core": "11.1.8",
        "@nestjs/microservices": "11.1.8",
        "@nestjs/platform-express": "11.1.8",
        "@nestjs/swagger": "11.2.1",
        "@nestjs/throttler": "6.4.0",
        "@nestjs/typeorm": "11.0.0",
        "amqp-connection-manager": "5.0.0",
        "amqplib": "0.10.9",
        "axios": "1.13.1",
        "bcrypt": "6.0.0",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.2",
        "ioredis": "5.8.2",
        "pg": "^8.16.3",
        "typeorm": "0.3.27",
        "uuid": "13.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "11.0.10",
        "@nestjs/schematics": "11.0.9",
        "@nestjs/testing": "11.1.8",
        "@types/bcrypt": "6.0.0",
        "@types/express": "5.0.5",
        "@types/jest": "30.0.0",
        "@types/node": "24.9.2",
        "@types/pg": "8.15.6",
        "@types/supertest": "6.0.3",
        "@types/uuid": "11.0.0",
        "@typescript-eslint/eslint-plugin": "8.46.2",
        "@typescript-eslint/parser": "8.46.2",
        "eslint": "9.39.0",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-prettier": "5.5.4",
        "jest": "30.2.0",
        "prettier": "3.6.2",
        "source-map-support": "0.5.21",
        "supertest": "7.1.4",
        "ts-jest": "29.4.5",
        "ts-loader": "9.5.4",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.9.3"
    }
}